{
  "name": "blockmatic-nodejs-template",
  "version": "1.0.0",
  "description": "blockmatic nodejs template",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "repository": "git@github.com:blockmatic/nodejs-template.git",
  "author": "blockmatic.io",
  "license": "MIT",
  "scripts": {
    "dev": "ts-node-dev --no-deps --respawn src/index",
    "build": "tsc",
    "lint": "eslint --ignore-path .gitignore \"**/*.+(js|ts|tsx)\"",
    "format": "prettier --ignore-path .gitignore --write \"**/*.+(js|json|ts|tsx)\""
  },
  "lint-staged": {
    "*.{ts,tsx,js}": [
      "prettier --write",
      "eslint --fix"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "devDependencies": {
    "@blockmatic/eslint-config": "^2.0.0",
    "@blockmatic/prettier-config": "^2.0.0",
    "@blockmatic/tsconfig": "^2.0.0",
    "@types/express": "^4.17.12",
    "@types/node": "^15.12.4",
    "eslint": "7",
    "husky": "^6.0.0",
    "lint-staged": "^11.0.0",
    "npm-check-updates": "^11.7.1",
    "prettier": "^2.3.1",
    "ts-node-dev": "^1.1.6",
    "typescript": "^4.3.4"
  },
  "dependencies": {
    "@chaingraph.io/hasura-client": "^0.1.3",
    "dotenv": "^10.0.0",
    "express": "^4.17.1",
    "graphql": "^15.5.1",
    "graphql-request": "^3.4.0",
    "graphql-tag": "^2.12.5"
  }
}
