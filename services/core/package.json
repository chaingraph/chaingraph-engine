{
  "name": "chaingraph",
  "version": "1.0.0",
  "description": "Chaingraph Community Edition",
  "main": "index.js",
  "repository": "git@github.com:chaingraph/chaingraph.git",
  "author": "blockmatic.io",
  "license": "MIT",
  "scripts": {
    "dev": "env-cmd ts-node-dev --no-deps --respawn src/index",
    "build": "tsc",
    "lint": "eslint --ignore-path .gitignore \"**/*.+(js|ts|tsx)\"",
    "format": "prettier --ignore-path .gitignore --write \"**/*.+(js|json|ts|tsx)\"",
    "hasura": "hasura console --project src/hasura --console-port 8080",
    "seed": "hasura seeds apply --project src/hasura ",
    "gen": "rimraf src/generated && graphql-codegen --config codegen.yml -r dotenv/config",
    "doctoc": "doctoc ./README.md --github",
    "dc": "env-cmd sudo docker-compose",
    "postbuild": "cpy --cwd=src --parents '**/*.graphql' ../dist/src"
  },
  "lint-staged": {
    "*.{ts,tsx,js}": [
      "prettier --write",
      "eslint --fix"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "devDependencies": {
    "@blockmatic/eslint-config": "^1.5.0",
    "@blockmatic/prettier-config": "^1.5.0",
    "@blockmatic/tsconfig": "^1.10.0",
    "@graphql-codegen/cli": "1.20.0",
    "@graphql-codegen/introspection": "1.18.1",
    "@graphql-codegen/typescript": "1.19.0",
    "@graphql-codegen/typescript-graphql-request": "^3.0.0",
    "@graphql-codegen/typescript-operations": "^1.17.13",
    "@types/lodash.chunk": "^4.2.6",
    "@types/lodash.omit": "^4.5.6",
    "@types/node": "^14.14.14",
    "@types/text-encoding": "^0.0.35",
    "@types/ws": "^7.4.0",
    "cpy-cli": "^3.1.1",
    "doctoc": "^2.0.0",
    "env-cmd": "^10.1.0",
    "eslint": "6",
    "hasura-cli": "^1.3.3",
    "husky": "^4.3.6",
    "lint-staged": "^10.5.3",
    "prettier": "^2.2.1",
    "rimraf": "^3.0.2",
    "ts-node-dev": "^1.1.1",
    "typescript": "^4.1.3"
  },
  "dependencies": {
    "@blockmatic/eosio-ship-reader": "^0.1.4",
    "@eosrio/node-abieos": "^2.1.0-beta.0",
    "env-cmd": "^10.1.0",
    "eos-common": "^0.8.0",
    "eosjs": "^21.0.3",
    "graphql": "^15.4.0",
    "graphql-request": "3.4.0",
    "hasura-cli": "^1.3.3",
    "lodash.chunk": "^4.2.0",
    "lodash.omit": "^4.5.0",
    "node-fetch": "^2.6.1",
    "node-worker-threads-pool": "^1.4.3",
    "p-all": "^3.0.0",
    "p-queue": "^6.6.2",
    "rxjs": "^6.6.3",
    "text-encoding": "^0.7.0",
    "winston": "^3.3.3",
    "ws": "^7.4.1"
  }
}
