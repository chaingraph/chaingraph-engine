{
  "name": "chaingraph",
  "version": "1.0.0",
  "description": "Chaingraph Core",
  "main": "index.js",
  "repository": "git@github.com:chaingraph/chaingraph.git",
  "author": "blockmatic.io",
  "license": "MIT",
  "scripts": {
    "dev": "env-cmd ts-node-dev --no-deps --respawn src/index",
    "build": "tsc",
    "lint": "eslint --ignore-path .gitignore \"**/*.+(js|ts|tsx)\"",
    "format": "prettier --ignore-path .gitignore --write \"**/*.+(js|json|ts|tsx)\"",
    "hasura": "hasura console --project src/hasura --console-port 8080",
    "seed": "hasura seeds apply --project src/hasura ",
    "gen": "rimraf src/generated && graphql-codegen --config codegen.yml -r dotenv/config",
    "doctoc": "doctoc ./README.md --github",
    "dc": "env-cmd sudo docker-compose",
    "postbuild": "cpy --cwd=src --parents '**/*.graphql' ../dist/src"
  },
  "lint-staged": {
    "*.{ts,tsx,js}": [
      "prettier --write",
      "eslint --fix"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "devDependencies": {
    "@blockmatic/eslint-config": "^2.0.0",
    "@blockmatic/prettier-config": "^2.0.0",
    "@blockmatic/tsconfig": "^2.0.0",
    "@graphql-codegen/cli": "1.21.5",
    "@graphql-codegen/introspection": "1.18.2",
    "@graphql-codegen/typescript": "1.22.3",
    "@graphql-codegen/typescript-graphql-request": "^3.2.3",
    "@graphql-codegen/typescript-operations": "^1.18.2",
    "@types/lodash.chunk": "^4.2.6",
    "@types/lodash.omit": "^4.5.6",
    "@types/node": "^15.12.5",
    "@types/text-encoding": "^0.0.35",
    "@types/ws": "^7.4.5",
    "cpy-cli": "^3.1.1",
    "doctoc": "^2.0.1",
    "env-cmd": "^10.1.0",
    "eslint": "7",
    "hasura-cli": "^2.0.1",
    "husky": "^6.0.0",
    "lint-staged": "^11.0.0",
    "prettier": "^2.3.2",
    "rimraf": "^3.0.2",
    "ts-node-dev": "^1.1.6",
    "typescript": "^4.3.4"
  },
  "dependencies": {
    "@blockmatic/eosio-ship-reader": "^0.2.0",
    "@chaingraph.io/hasura-client": "^0.2.1",
    "@eosrio/node-abieos": "^2.1.1",
    "@greymass/eosio": "^0.4.6",
    "env-cmd": "^10.1.0",
    "eos-common": "^0.8.1",
    "eosjs": "^22.0.0",
    "eosjs-account-name": "^2.2.1",
    "graphql": "^15.5.1",
    "graphql-request": "3.4.0",
    "hasura-cli": "^2.0.1",
    "kikstart-graphql-client": "^1.5.0",
    "lodash.chunk": "^4.2.0",
    "lodash.omit": "^4.5.0",
    "node-fetch": "^2.6.1",
    "node-worker-threads-pool": "^1.5.0",
    "p-queue": "^7.1.0",
    "rxjs": "^6.6.3",
    "text-encoding": "^0.7.0",
    "winston": "^3.3.3",
    "ws": "^7.5.0"
  }
}
