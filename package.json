{
  "name": "chaingraph",
  "version": "1.0.0",
  "description": "Chaingraph Community Edition",
  "main": "index.js",
  "repository": "git@github.com:chaingraph/chaingraph.git",
  "author": "blockmatic.io",
  "license": "MIT",
  "scripts": {
    "dev": "env-cmd ts-node-dev --no-deps --respawn src/index",
    "build": "tsc",
    "lint": "eslint --ignore-path .gitignore \"**/*.+(js|ts|tsx)\"",
    "format": "prettier --ignore-path .gitignore --write \"**/*.+(js|json|ts|tsx)\"",
    "hasura": "hasura console --project src/hasura --console-port 8080",
    "seed": "hasura seeds apply --project src/hasura ",
    "gen": "rimraf src/generated && graphql-codegen --config codegen.yml -r dotenv/config",
    "doctoc": "doctoc ./README.md --github",
    "dc": "env-cmd sudo docker-compose"
  },
  "lint-staged": {
    "*.{ts,tsx,js}": [
      "prettier --write",
      "eslint --fix"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "devDependencies": {
    "@blockmatic/eslint-config": "^1.3.11",
    "@blockmatic/prettier-config": "^1.3.3",
    "@blockmatic/tsconfig": "^1.8.4",
    "@types/node": "^14.14.10",
    "@types/text-encoding": "^0.0.35",
    "@types/ws": "^7.4.0",
    "@graphql-codegen/cli": "1.19.4",
    "@graphql-codegen/introspection": "1.18.1",
    "@graphql-codegen/typescript": "1.19.0",
    "@graphql-codegen/typescript-graphql-request": "^2.0.3",
    "@graphql-codegen/typescript-operations": "^1.17.12",
    "@types/lodash.omit": "^4.5.6",
    "commander": "^6.2.0",
    "doctoc": "^1.4.0",
    "env-cmd": "^10.1.0",
    "eslint": "^6",
    "husky": "^4.3.0",
    "lint-staged": "^10.5.2",
    "prettier": "^2.2.1",
    "ts-node-dev": "^1.0.0",
    "typescript": "^3.8.3"
  },
  "dependencies": {
    "@blockmatic/eosio-ship-reader": "^0.1.1",
    "@eosrio/node-abieos": "^2.1.0-beta.0",
    "env-cmd": "^10.1.0",
    "eosjs": "^21.0.3",
    "graphql": "^15.4.0",
    "graphql-request": "3.3.0",
    "hasura-cli": "^1.3.3",
    "lodash.omit": "^4.5.0",
    "node-fetch": "^2.6.1",
    "node-worker-threads-pool": "^1.4.3",
    "p-queue": "^6.6.2",
    "rimraf": "^3.0.2",
    "rxjs": "^6.6.3",
    "text-encoding": "^0.7.0",
    "winston": "^3.3.3",
    "ws": "^7.4.0"
  }
}
